// basic gatsbyjs tsconfig.json
{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["jest", "node"],
    "typeRoots": ["./typings", "./node_modules/@types"]
    // "noImplicitAny": true
  },
  "exclude": ["node_modules", "public", ".cache"]
}
